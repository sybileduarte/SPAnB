<div class="bg-img-home">
  <%= render 'shared/navbar' %>
  <div class="search-engine search-bar">
    <%= form_tag pets_path, method: :get, class:"horizontal" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control adjectives",
          placeholder: "Try \"beautiful labrador\""
        %>
        <%= text_field_tag :address,
          params[:address],
          class: "form-control address",
          placeholder: "Lille Flandres..."
        %>
        <%= submit_tag "Search", class: "btn btn-dark" %>
    <% end %>
  </div>
  <%= render 'shared/road' %>
</div>
