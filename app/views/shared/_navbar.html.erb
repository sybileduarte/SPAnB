<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= params[:action] == 'home' ? 'transparent' : 'black'%>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/ambroise/image/upload/v1582046801/cc13b814a6f46ed45371fbb37b3b78b1_obfdqo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Add a pet",new_pet_path, class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "All pets",pets_path, class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Bookings",bookings_path, class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Help", "https://www.airbnb.fr/", class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://avatars3.githubusercontent.com/u/59177625?s=400&v=4", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Inscription", new_user_registration_path, class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
        <li class="nav-item">
          <%= link_to "Connexion",new_user_session_path , class: "nav-link #{params[:action] == 'home' ? 'white' : 'black'}" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
